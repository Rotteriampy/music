<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/editRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/black">

    <!-- Заголовок -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Редактировать теги"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Поле Title -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Название:"
        android:textColor="@android:color/white"
        android:layout_marginBottom="4dp" />
    <EditText
        android:id="@+id/etTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите название"
        android:textColor="@android:color/white"
        android:background="@android:color/darker_gray"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Поле Artist -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Артист:"
        android:textColor="@android:color/white"
        android:layout_marginBottom="4dp" />
    <EditText
        android:id="@+id/etArtist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите артиста"
        android:textColor="@android:color/white"
        android:background="@android:color/darker_gray"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Поле Album -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Альбом:"
        android:textColor="@android:color/white"
        android:layout_marginBottom="4dp" />
    <EditText
        android:id="@+id/etAlbum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите альбом"
        android:textColor="@android:color/white"
        android:background="@android:color/darker_gray"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Поле Genre -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Жанр:"
        android:textColor="@android:color/white"
        android:layout_marginBottom="4dp" />
    <EditText
        android:id="@+id/etGenre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите жанр"
        android:textColor="@android:color/white"
        android:background="@android:color/darker_gray"
        android:padding="12dp"
        android:layout_marginBottom="32dp" />

    <!-- Кнопки -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back_triangle"
            android:background="@null"
            android:contentDescription="Назад"
            android:tint="@android:color/white"
            android:layout_marginEnd="16dp" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сохранить"
            android:backgroundTint="@color/accent_color" />

    </LinearLayout>

</LinearLayout>