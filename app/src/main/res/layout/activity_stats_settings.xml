<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/statsSettingsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Заголовок -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Управление статистикой"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextPrimary"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="8dp" />

    <!-- Раздел выбора типа графика (сверху) -->
    <LinearLayout
        android:id="@+id/chartTypeSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/settings_section_background"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <!-- Заголовок с иконкой -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_stats"
                android:tint="@color/colorIconTint"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Тип графика"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorTextPrimary" />
        </LinearLayout>

        <!-- Кликабельная строка выбора типа графика -->
        <LinearLayout
            android:id="@+id/chartTypeRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/settings_item_background"
            android:padding="12dp">

            <TextView
                android:id="@+id/chartTypeValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Линия"
                android:textSize="16sp"
                android:textColor="@color/colorTextPrimary" />

            <ImageView
                android:id="@+id/chartTypeArrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_down"
                android:tint="@color/colorIconTint" />

            <!-- Скрытый Spinner внутри строки для корректного якорения выпадающего меню -->
            <Spinner
                android:id="@+id/spChartTypeSettings"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:visibility="invisible"
                android:spinnerMode="dropdown" />
        </LinearLayout>

    </LinearLayout>

    <!-- Раздел статистики с полупрозрачным фоном -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/settings_section_background"
        android:padding="16dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_data"
                android:tint="@color/colorIconTint"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Данные"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorTextPrimary" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/exportStatsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/settings_item_background"
            android:padding="12dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_export"
                android:tint="@color/colorIconTint"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Экспортировать статистику"
                android:textSize="16sp"
                android:textColor="@color/colorTextPrimary" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/importStatsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/settings_item_background"
            android:padding="12dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_import"
                android:tint="@color/colorIconTint"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Импортировать статистику"
                android:textSize="16sp"
                android:textColor="@color/colorTextPrimary" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/clearStatsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/settings_item_background"
            android:padding="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_delete"
                android:tint="@android:color/holo_red_light"
                android:layout_marginEnd="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Очистить статистику"
                android:textSize="16sp"
                android:textColor="@android:color/holo_red_light" />

        </LinearLayout>

    </LinearLayout>

    <!-- Кнопка Назад как LinearLayout -->
    <LinearLayout
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/card_background_light2"
        android:padding="16dp"
        android:layout_marginTop="80dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Назад"
            android:textSize="16sp"
            android:textColor="@color/colorTextPrimary"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>