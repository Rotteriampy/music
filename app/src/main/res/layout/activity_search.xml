<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/searchLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black"
    android:padding="16dp">

    <!-- Строка поиска с кнопкой назад -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <ImageButton
            android:id="@+id/btnBackSearch"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back_triangle"
            android:background="@null"
            android:contentDescription="Назад"
            android:tint="@android:color/white"
            android:layout_marginEnd="8dp" />

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:hint="Поиск..."
            android:textColorHint="#888888"
            android:textColor="@android:color/black"
            android:background="@android:color/white"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:singleLine="true"
            android:imeOptions="actionSearch" />

    </LinearLayout>

    <!-- Выбор раздела поиска -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginBottom="16dp">

        <RadioGroup
            android:id="@+id/searchTypeGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbTracks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Треки"
                android:textColor="@android:color/white"
                android:buttonTint="@color/accent_color"
                android:checked="true"
                android:paddingEnd="16dp" />

            <RadioButton
                android:id="@+id/rbPlaylists"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Плейлисты"
                android:textColor="@android:color/white"
                android:buttonTint="@color/accent_color"
                android:paddingEnd="16dp" />

            <RadioButton
                android:id="@+id/rbAlbums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Альбомы"
                android:textColor="@android:color/white"
                android:buttonTint="@color/accent_color"
                android:paddingEnd="16dp" />

            <RadioButton
                android:id="@+id/rbArtists"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Исполнители"
                android:textColor="@android:color/white"
                android:buttonTint="@color/accent_color"
                android:paddingEnd="16dp" />

            <RadioButton
                android:id="@+id/rbGenres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Жанры"
                android:textColor="@android:color/white"
                android:buttonTint="@color/accent_color" />

        </RadioGroup>

    </HorizontalScrollView>

    <!-- Разделитель -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#333333"
        android:layout_marginBottom="8dp" />

    <!-- Результаты поиска -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/resultsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>