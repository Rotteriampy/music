<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@android:color/black">

    <!-- Основные пункты сортировки -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сортировка"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="12dp"
        android:background="?android:attr/selectableItemBackground" />

    <!-- Разделитель -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#333333"
        android:layout_marginVertical="4dp" />

    <!-- Контейнер для направления сортировки -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Направление:"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <!-- Стрелка вниз -->
        <ImageButton
            android:id="@+id/btnSortDesc"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_down"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="По убыванию" />

        <!-- Ползунок (просто линия со стрелками) -->
        <View
            android:layout_width="60dp"
            android:layout_height="2dp"
            android:background="@android:color/white"
            android:layout_marginHorizontal="8dp" />

        <!-- Стрелка вверх -->
        <ImageButton
            android:id="@+id/btnSortAsc"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_arrow_up"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="По возрастанию" />

    </LinearLayout>

</LinearLayout>