<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_triangle"
            android:background="@null"
            android:contentDescription="Back"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lyricsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:ellipsize="end"
                android:maxLines="1" />

            <TextView
                android:id="@+id/lyricsArtist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#B0B0B0"
                android:textSize="16sp"
                android:ellipsize="end"
                android:maxLines="1" />
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/lyricsEdit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="top|start"
        android:textColor="@android:color/white"
        android:textColorHint="#808080"
        android:hint="Введите текст песни..."
        android:background="@android:color/transparent" />

    <Button
        android:id="@+id/btnSaveLyrics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сохранить"
        android:background="@drawable/button_background_green"
        android:textColor="@android:color/white"
        android:backgroundTint="@null"
        app:backgroundTint="@null"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/btnFindLyrics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Найти в интернете"
        android:background="@drawable/button_background_blue"
        android:textColor="@android:color/white"
        android:backgroundTint="@null"
        app:backgroundTint="@null"
        android:layout_marginTop="8dp" />

</LinearLayout>
