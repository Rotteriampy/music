<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/albumRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Верхняя панель: Назад слева, Подробнее справа -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnBackAlbum"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back_triangle"
            android:background="@null"
            android:contentDescription="Назад"
            android:tint="@android:color/white" />

        <!-- Название -->
        <TextView
            android:id="@+id/albumNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btnAlbumMore"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_edit"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@android:color/white" />
    </LinearLayout>

    <!-- РАЗДЕЛИТЕЛЬ -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="@android:color/white"
        android:alpha="0.2" />

    <!-- Статистика слева, сортировка и порядок справа -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/albumStatsText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0 треков • 0:00"
            android:textColor="@android:color/white"
            android:alpha="0.8" />

        <ImageButton
            android:id="@+id/btnSearch"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_search"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@android:color/white"
            android:layout_marginEnd="8dp"/>

        <ImageButton
            android:id="@+id/btnSortAlbum"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_sort"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@android:color/white"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/btnReorderTracks"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_reorder"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@android:color/white" />
    </LinearLayout>

    <!-- Ряд воспроизведения -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <ImageButton
            android:id="@+id/btnPlayAlbum"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_play_count_b"
            android:background="@drawable/rounded_rect_gray_background"
            android:contentDescription="Воспроизвести альбом"
            android:scaleType="centerInside"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/btnShuffleAlbum"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_shuffle"
            android:background="@drawable/rounded_rect_gray_background"
            android:contentDescription="Перемешать и воспроизвести"
            android:scaleType="centerInside" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/albumTracksList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="8dp" />

</LinearLayout>