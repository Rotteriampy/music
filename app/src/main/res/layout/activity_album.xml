<!-- activity_album.xml -->
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/albumRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Отступ сверху -->
    <View
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <!-- Название альбома -->
    <TextView
        android:id="@+id/albumNameText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Строка с кнопками -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnBackAlbum"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back_triangle"
            android:background="@null"
            android:contentDescription="Назад"
            android:tint="@android:color/white" />

        <!-- Пространство между левыми и центральными кнопками -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Кнопка воспроизведения альбома -->
        <ImageButton
            android:id="@+id/btnPlayAlbum"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_play"
            android:background="@drawable/oval_accent_background"
            android:contentDescription="Воспроизвести альбом"
            android:scaleType="centerInside"
            android:layout_marginEnd="12dp" />

        <!-- Кнопка перемешивания альбома -->
        <ImageButton
            android:id="@+id/btnShuffleAlbum"
            android:layout_width="64dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_shuffle"
            android:background="@drawable/oval_accent_background"
            android:contentDescription="Перемешать и воспроизвести"
            android:scaleType="centerInside" />

        <!-- Пространство между центральными и правыми кнопками -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btnAlbumMore"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_more"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@android:color/white" />

    </LinearLayout>

    <!-- Кнопки сортировки, переупорядочивания и поиска -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <ImageButton
            android:id="@+id/btnSortAlbum"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_sort"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@android:color/white"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/btnReorderTracks"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_reorder"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@android:color/white"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/btnSearch"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_search"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@android:color/white" />

    </LinearLayout>

    <!-- Поиск -->
    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Поиск треков..."
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:background="@drawable/search_background"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        android:inputType="text" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/albumTracksList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="8dp" />

</LinearLayout>