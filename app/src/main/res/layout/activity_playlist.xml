<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playlistRootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Верхняя панель: Назад слева, Удалить справа -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back_triangle"
            android:background="@null"
            android:contentDescription="Назад"
            android:tint="@color/colorIconTint" />

        <!-- Название -->
        <TextView
            android:id="@+id/playlistNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextPrimary"
            android:gravity="center"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/btnEditPlaylist"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_edit"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Редактировать плейлист"
            android:tint="@color/colorIconTint"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/btnDeletePlaylist"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_delete"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Удалить плейлист"
            android:tint="@color/colorIconTint" />
    </LinearLayout>

    <!-- РАЗДЕЛИТЕЛЬ -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="@android:color/white"
        android:alpha="0.2" />

    <!-- Статистика слева, добавление/сортировка/порядок справа -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/playlistStatsText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0 треков • 0:00"
            android:textColor="@color/colorTextPrimary"
            android:alpha="0.8" />

        <!-- Кнопка добавить трек (слева от сортировки) -->
        <ImageButton
            android:id="@+id/btnAddTrack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_playlist_add"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Добавить трек"
            android:tint="@color/colorIconTint"
            android:layout_marginEnd="8dp" />

        <!-- Кнопка сортировки -->
        <ImageButton
            android:id="@+id/btnSortPlaylist"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_sort"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:tint="@color/colorIconTint"
            android:layout_marginEnd="8dp" />

        <!-- Кнопка изменения порядка (перетаскивание) -->
        <ImageButton
            android:id="@+id/btnReorder"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_reorder"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Изменить порядок"
            android:tint="@color/colorIconTint" />
    </LinearLayout>

    <!-- Ряд воспроизведения -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <ImageButton
            android:id="@+id/btnPlayPlaylist"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_play_count_b"
            android:background="@drawable/rounded_rect_gray_background"
            android:contentDescription="Воспроизвести плейлист"
            android:scaleType="centerInside"
            android:layout_marginEnd="8dp" />

        <ImageButton
            android:id="@+id/btnShufflePlaylist"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:src="@drawable/ic_shuffle"
            android:background="@drawable/rounded_rect_gray_background"
            android:contentDescription="Перемешать и воспроизвести"
            android:scaleType="centerInside" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playlistTracksList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="8dp" />

</LinearLayout>