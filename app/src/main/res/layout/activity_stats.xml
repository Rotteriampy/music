<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/statsRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/btnBackStats"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back_triangle"
            android:background="@null"
            android:contentDescription="Назад"
            android:tint="@android:color/white" />

        <TextView
            android:id="@+id/statsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Статистика"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_marginStart="12dp" />
    </LinearLayout>

    <!-- Выбор типа (одна кнопка с выпадающим меню) -->
    <Spinner
        android:id="@+id/spMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:spinnerMode="dropdown" />

    <RadioGroup
        android:id="@+id/rgPeriod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <RadioButton
            android:id="@+id/rbDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Дни"
            android:textColor="@android:color/white"
            android:buttonTint="@android:color/white"
            android:layout_marginEnd="12dp" />

        <RadioButton
            android:id="@+id/rbWeeks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Недели"
            android:textColor="@android:color/white"
            android:buttonTint="@android:color/white"
            android:layout_marginEnd="12dp" />

        <RadioButton
            android:id="@+id/rbMonths"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Месяцы"
            android:textColor="@android:color/white"
            android:buttonTint="@android:color/white" />
    </RadioGroup>

    <!-- Диапазон убран: ось X регулируется кнопками периода (дни/недели/месяцы) -->

    <!-- Область графика: на ширину экрана, увеличенная высота -->
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/lineChart"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginTop="10dp" />

    <!-- Дополнительные данные -->
    <LinearLayout
        android:id="@+id/extraPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/extraTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:layout_marginTop="20dp"
            android:text="Всего прослушиваний" />

        <TextView
            android:id="@+id/extraValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:text="0" />
    </LinearLayout>

</LinearLayout>
