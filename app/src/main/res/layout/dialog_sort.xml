<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/black">

    <!-- Заголовок -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Сортировка"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Тип сортировки -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Тип сортировки:"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <RadioGroup
        android:id="@+id/sortTypeGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/sortByDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="По дате добавления"
            android:textColor="@android:color/white" />

        <RadioButton
            android:id="@+id/sortByName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="По имени"
            android:textColor="@android:color/white" />

        <RadioButton
            android:id="@+id/sortByArtist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="По артисту"
            android:textColor="@android:color/white" />

        <RadioButton
            android:id="@+id/sortByDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="По продолжительности"
            android:textColor="@android:color/white" />

    </RadioGroup>

    <!-- Направление сортировки -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Направление:"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <!-- Ползунок с стрелками -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingVertical="8dp">

        <!-- Стрелка вверх (по возрастанию) -->
        <ImageButton
            android:id="@+id/btnSortAsc"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_up"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="По возрастанию"
            android:layout_marginEnd="8dp" />

        <!-- "Ползунок" - визуальный индикатор -->
        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="@drawable/sort_slider_bg"
            android:gravity="center">

            <TextView
                android:id="@+id/sortDirectionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="↑"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Стрелка вниз (по убыванию) -->
        <ImageButton
            android:id="@+id/btnSortDesc"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_down"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="По убыванию"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Кнопки действий -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnApplySort"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Применить"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/accent_color" />

        <Button
            android:id="@+id/btnCancelSort"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Отмена"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>