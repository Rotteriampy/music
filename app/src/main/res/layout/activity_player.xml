<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@android:color/black">

    <!-- Верхняя панель: back | centered tabs | more (фиксированная) -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@null"
            android:src="@drawable/ic_back_triangle"
            android:contentDescription="Back to main"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:id="@+id/addToPlaylistButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_more_vert"
            android:background="@null"
            android:contentDescription="More options"
            android:layout_alignParentEnd="true" />

        <LinearLayout
            android:id="@+id/sectionTabs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/btnSongTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Песня"
                android:textColor="@color/accent_color"
                android:textSize="20sp"
                android:paddingVertical="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  |  "
                android:textColor="#B0B0B0"
                android:textSize="20sp"
                android:paddingHorizontal="8dp" />

            <TextView
                android:id="@+id/btnLyricsTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Текст"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:paddingVertical="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>

    </RelativeLayout>

    <!-- Контентная область (занимает всё оставшееся пространство) -->
    <FrameLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Контейнер плеера (обертка для основного UI) -->
        <LinearLayout
            android:id="@+id/playerContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="25dp">

            <!-- Обложка трека -->
            <ImageView
                android:id="@+id/playerTrackAvatar"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:contentDescription="Track album art"
                android:scaleType="centerCrop"
                android:src="@android:drawable/ic_menu_gallery"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="24dp"
                android:translationY="-12dp"/>

            <!-- Название трека -->
            <TextView
                android:id="@+id/playerTrackName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="8dp" />

            <!-- Автор трека -->
            <TextView
                android:id="@+id/playerTrackArtist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#B3FFFFFF"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="32dp" />

            <!-- Прогресс-бар и время -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="32dp">

                <TextView
                    android:id="@+id/currentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0:00"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp" />

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="0dp" />

                <TextView
                    android:id="@+id/totalTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0:00"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

            <!-- Кнопки управления воспроизведением -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingHorizontal="19dp">

                <!-- Кнопка режима прослушивания -->
                <ImageButton
                    android:id="@+id/playbackModeButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="16dp"
                    android:background="@null"
                    android:contentDescription="Playback mode"
                    android:src="@drawable/ic_repeat_off" />

                <!-- Кнопка "Назад" -->
                <ImageButton
                    android:id="@+id/previousButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="24dp"
                    android:background="@null"
                    android:contentDescription="Previous track"
                    android:src="@drawable/ic_previous" />

                <!-- Кнопка "Play/Pause" -->
                <ImageButton
                    android:id="@+id/playPauseButton"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/circle_accent_background"
                    android:contentDescription="@drawable/ic_pause"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_play" />

                <ImageButton
                    android:id="@+id/nextButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="24dp"
                    android:background="@null"
                    android:contentDescription="Next track"
                    android:src="@drawable/ic_next" />

                <ImageButton
                    android:id="@+id/favoriteButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:background="@null"
                    android:contentDescription="Add to favorites"
                    android:src="@drawable/ic_favorite_border" />

            </LinearLayout>

        </LinearLayout>

        <include
            android:id="@+id/lyricsContainer"
            layout="@layout/include_lyrics_content"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

</LinearLayout>