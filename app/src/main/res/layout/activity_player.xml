<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/playerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@android:color/black">

    <!-- Пустое пространство сверху -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Кнопка выхода вверху -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start|center_vertical"
        android:layout_marginBottom="32dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/ic_back_triangle"
            android:contentDescription="Back to main"
            android:layout_marginEnd="16dp" />

        <ImageButton
            android:id="@+id/addToPlaylistButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_playlist_add"
            android:background="@null"
            android:contentDescription="Add to playlist"
            android:layout_marginStart="270dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <!-- Обложка трека -->
    <ImageView
        android:id="@+id/playerTrackAvatar"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:contentDescription="Track album art"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_menu_gallery"
        android:layout_marginBottom="24dp" />

    <!-- Название трека -->
    <TextView
        android:id="@+id/playerTrackName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginBottom="8dp" />

    <!-- Автор трека -->
    <TextView
        android:id="@+id/playerTrackArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#B3FFFFFF"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginBottom="32dp" />

    <!-- Прогресс-бар и время -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="32dp">

        <TextView
            android:id="@+id/currentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginEnd="8dp" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="0dp" />

        <TextView
            android:id="@+id/totalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_marginStart="8dp" />

    </LinearLayout>

    <!-- Кнопки управления воспроизведением -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="20dp">

        <!-- Кнопка режима прослушивания -->
        <ImageButton
            android:id="@+id/playbackModeButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_repeat_off"
            android:background="@null"
            android:contentDescription="Playback mode"
            android:layout_marginEnd="16dp" />

        <!-- Кнопка "Назад" -->
        <ImageButton
            android:id="@+id/previousButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_previous"
            android:background="@null"
            android:contentDescription="Previous track"
            android:layout_marginEnd="24dp" />

        <!-- Кнопка "Play/Pause" -->
        <ImageButton
            android:id="@+id/playPauseButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/circle_accent_background"
            android:src="@drawable/ic_play"
            android:contentDescription="@drawable/ic_pause"
            android:scaleType="centerInside" />

        <!-- Кнопка "Вперед" -->
        <ImageButton
            android:id="@+id/nextButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_next"
            android:background="@null"
            android:contentDescription="Next track"
            android:layout_marginStart="24dp" />

        <!-- Кнопка "Избранное" -->
        <ImageButton
            android:id="@+id/favoriteButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_favorite_border"
            android:background="@null"
            android:contentDescription="Add to favorites"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <!-- Пустое пространство снизу -->
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>