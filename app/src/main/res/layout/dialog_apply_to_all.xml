<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/dialog_background"
    android:backgroundTint="#1E1E1E">

    <!-- Заголовок -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Применить ко всем трекам"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp" />

    <!-- Выбор критерия поиска -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Найти треки по:"
        android:textColor="#CCCCCC"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinnerSearchBy"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/edit_text_background"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" />

    <!-- Значение для поиска -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Со значением:"
        android:textColor="#CCCCCC"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editSearchValue"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/edit_text_background"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:padding="12dp"
        android:hint="Введите значение"
        android:textColorHint="#888888"
        android:singleLine="true"
        android:layout_marginBottom="16dp" />

    <!-- Применить значение -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Применить значение:"
        android:textColor="#CCCCCC"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/spinnerApplyField"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/edit_text_background"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" />

    <!-- Значение для применения -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Новое значение:"
        android:textColor="#CCCCCC"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/editApplyValue"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/edit_text_background"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:padding="12dp"
        android:hint="Введите новое значение"
        android:textColorHint="#888888"
        android:singleLine="true"
        android:layout_marginBottom="24dp" />

    <!-- Кнопки -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Отмена"
            android:background="@drawable/button_background_red"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnApply"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Применить"
            android:background="@drawable/button_background_green"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>