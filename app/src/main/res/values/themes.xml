<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Music" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Music" parent="Base.Theme.Music" />

    <!-- Splash theme to remove white flash: paints windowBackground immediately -->
    <style name="SplashTheme" parent="Theme.Music">
        <item name="android:windowBackground">@drawable/splash_window_bg</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>
    <style name="CustomDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
    </style>
    <style name="PopupMenuStyle" parent="ThemeOverlay.Material3.Dark">
        <item name="android:colorBackground">#FF424242</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:itemBackground">@drawable/popup_menu_item_background</item>
        <item name="android:listDivider">@drawable/popup_menu_divider</item>
    </style>
</resources>